#version 330 core

in vec4 frontColor;
out vec4 fragColor;

in vec2 vtexCoord;

uniform vec4 black = vec4(0.,0.,0.,1.0);
uniform vec4 grey = vec4(0.8,0.8,0.8,1.0);   
uniform float n = 8.0;

void main()
{
	vec2 texCoord = vtexCoord*n;
	if (mod(texCoord.s,2) <=1.f && mod(texCoord.t,2)<=1.f) fragColor = black;
	else if(mod(texCoord.s,2) >1.f && mod(texCoord.t,2)>1.f) fragColor = black;
	else fragColor = grey;
}
